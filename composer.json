{
    "name": "phastron/phastron",
    "description": "The Ultimate PHP Utility Arsenal - High-performance algorithmic utilities, developer-friendly helpers, and cutting-edge tooling",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "php",
        "utilities",
        "algorithms",
        "sorting",
        "data-structures",
        "cli",
        "performance",
        "tools"
    ],
    "authors": [
        {
            "name": "Phastron Contributors",
            "homepage": "https://github.com/makalin/phastron"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "vimeo/psalm": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "ext-parallel": "*"
    },
    "suggest": {
        "ext-parallel": "For parallel processing capabilities in RingBuffer",
        "ext-simd": "For SIMD-accelerated operations (future)"
    },
    "autoload": {
        "psr-4": {
            "Phastron\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phastron\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "cs": "php-cs-fixer fix",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse",
        "psalm": "psalm",
        "all": [
            "@cs",
            "@stan",
            "@psalm",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
